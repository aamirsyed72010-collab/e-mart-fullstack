{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "hosting": {
    "public": "e-mart-frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api2"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5003
    },
    "hosting": {
      "port": 0
    },
    "ui": {
      "enabled": true,
      "port": 0
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 0
    }
  }
}
